<Window x:Class="ExamNet.Cards"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamNet"
        mc:Ignorable="d"
        Title="Cards" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding Characters}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:ChaptersCardController HorizontalAlignment="Left" Margin="373,125,0,0" VerticalAlignment="Top"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
